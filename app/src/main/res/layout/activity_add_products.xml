<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".AddProducts"
    android:layout_marginLeft="@dimen/layoutMargin"
    android:layout_marginRight="@dimen/layoutMargin"
    android:layout_marginTop="@dimen/layoutMargin"
    android:layout_marginBottom="@dimen/layoutMargin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="50dp"
        android:layout_height="wrap_content">


        <Button
            android:id="@+id/main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/nav_btn_margin"
            android:layout_marginRight="@dimen/nav_btn_margin"
            android:text="Home" />

        <Button
            android:id="@+id/products"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/gray"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/nav_btn_margin"
            android:layout_marginRight="@dimen/nav_btn_margin"
            android:text="Add Products" />

        <Button
            android:id="@+id/orders"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/nav_btn_margin"
            android:layout_marginRight="@dimen/nav_btn_margin"
            android:layout_weight="1"
            android:text="Orders" />
    </LinearLayout>

    <TextView
        android:id="@+id/introText"
        android:textSize="26dp"
        android:layout_marginBottom="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Product" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Product" />

        <EditText
            android:id="@+id/company"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Company" />

        <EditText
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Price (MKD)"
            android:inputType="number" />

        <EditText
            android:id="@+id/weight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Weight (grams)"
            android:inputType="number" />

        <EditText
            android:id="@+id/stock"
            android:layout_width="wrap_content"
            android:hint="Stock"
            android:ems="10"
            android:layout_height="wrap_content"
            android:inputType="number" />
    </LinearLayout>
    <Button
        android:id="@+id/addProduct"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add product" />


</LinearLayout>